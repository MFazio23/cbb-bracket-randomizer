<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bb_orange"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Round"
        android:id="@+id/round_text_view"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/champion_layout"
        android:visibility="gone"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/champion_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="Kentucky"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textSize="24dp"/>

        <TextView
            android:id="@+id/champion_seed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:text="1 seed"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:textStyle="italic"
            android:textSize="14sp"/>
    </LinearLayout>

    <include
        android:id="@+id/game_list_item"
        layout="@layout/game_list_item"/>
</LinearLayout>